<div class="container">
    <div class="post">
        <div class="post__add">
            <button class="post__add--btn">Add new post</button>
            <div class="post__add-modal">
                <div class="post__add-titleArea">
                    <label for="title">Title</label>
                    <input class="post__add-title" type="text" name="title">
                </div>
                <div class="post__add-bodyArea">
                    <label for="body">Body</label>
                    <textarea class="post__add-body" name="post__add-body" id="" cols="30" rows="10"></textarea>
                </div>
                <div class="post__add-submitArea"><button class="post__add-submit">Submit</button></div>
            </div>
        </div>
        <div class="post__descr"></div>
        <div class="post__edit-modal">
            <div class="post__edit-close">X</div>
            <div class="post__edit-titleArea">
                <label for="title">Title</label>
                <input class="post__edit-title" type="text" name="title">
            </div>
            <div class="post__edit-bodyArea">
                <label for="body">Body</label>
                <textarea class="post__edit-body" name="post__add-body" id="" cols="30" rows="10"></textarea>
            </div>
            <div class="post__edit-submitArea"><button class="post__edit-submit">Submit</button></div>
        </div>
    </div>
    <div class="filters">
        <div class="filters__search">
            <label for="search">Search by ID</label>
            <input type="search" name="search">
        </div>
    </div>
</div>